<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Dashboard</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- FontAwesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" rel="stylesheet" />

  <style>
    body {
      margin: 0;
      font-family: "Segoe UI", Arial, sans-serif;
      background: #f8f9fc;
    }

    /* Navbar */
    .navbar {
      background: linear-gradient(90deg, #2193b0, #6dd5ed);
      box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
    }

    .navbar-brand {
      font-weight: bold;
      font-size: 20px;
      letter-spacing: 1px;
      color: #fff !important;
    }

    /* Sidebar */
    .sidebar {
      position: fixed;
      top: 56px;
      left: 0;
      width: 250px;
      height: calc(100vh - 56px);
      background: linear-gradient(180deg, #141e30, #243b55);
      color: #ddd;
      padding: 20px 0;
      transition: transform 0.3s ease-in-out;
      transform: translateX(-100%);
      z-index: 1050;
      box-shadow: 3px 0 10px rgba(0, 0, 0, 0.3);
      overflow: hidden; /* ðŸ‘ˆ overflow hata diya */
    }

    .sidebar.active {
      transform: translateX(0);
    }

    .sidebar .menu-item {
      margin: 8px 0;
    }

    .sidebar a {
      display: flex;
      align-items: center;
      color: #cfd8dc;
      text-decoration: none;
      padding: 12px 20px;
      border-radius: 8px;
      transition: all 0.3s ease;
      font-size: 15px;
    }

    .sidebar a i {
      margin-right: 12px;
      font-size: 16px;
      color: #64b5f6;
      transition: color 0.3s ease;
    }

    .sidebar a:hover,
    .sidebar a.active {
      background: linear-gradient(90deg, #2193b0, #6dd5ed);
      color: #fff;
      transform: translateX(6px);
      box-shadow: 0 3px 8px rgba(0, 0, 0, 0.25);
    }

    .sidebar a:hover i {
      color: #fff;
    }

    /* Toggle Button */
    .toggle-btn {
      font-size: 22px;
      cursor: pointer;
      color: white;
      user-select: none;
    }

    /* Responsive */
    @media (min-width: 769px) {
      .sidebar {
        transform: translateX(0);
      }

      .toggle-btn {
        display: none;
      }
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-dark fixed-top">
    <div class="container-fluid">
      <a href="/admin/dashboard" class="navbar-brand"><i class="fas fa-cogs me-2"></i> Admin Panel</a>
      <span class="toggle-btn" id="toggleBtn"><i class="fas fa-bars"></i></span>
    </div>
  </nav>

  <!-- Sidebar -->
  <div class="sidebar" id="sidebar">
    <div class="menu-item">
      <a href="/admin/change-password" class="active">
        <i class="fas fa-lock"></i> Change Password
      </a>
    </div>

    <div class="menu-item">
      <a href="/admin/manage-userquery">
        <i class="fas fa-user"></i> User Queries
      </a>
    </div>

    <div class="menu-item">
      <a href="/admin/signout">
        <i class="fas fa-sign-out-alt"></i> Sign-Out
      </a>
    </div>
  </div>

  <!-- JS -->
  <script>
    const toggleBtn = document.getElementById("toggleBtn");
    const sidebar = document.getElementById("sidebar");

    toggleBtn.addEventListener("click", () => {
      sidebar.classList.toggle("active");
    });

    // Close sidebar when clicking outside (on mobile)
    document.addEventListener("click", (e) => {
      if (
        !sidebar.contains(e.target) &&
        !toggleBtn.contains(e.target) &&
        window.innerWidth < 769 &&
        sidebar.classList.contains("active")
      ) {
        sidebar.classList.remove("active");
      }
    });
  </script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
